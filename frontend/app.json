{
  "expo": {
    "name": "Cofau",
    "slug": "cofau-app",
    "version": "1.0.1",
    "orientation": "portrait",
    "scheme": "cofau",
    "userInterfaceStyle": "automatic",
    "icon": "./assets/images/icon.png",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#FFFFFF"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.cofau.app",
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "Allow Cofau to access your photo library for uploading posts.",
        "NSCameraUsageDescription": "Allow Cofau to access your camera for taking pictures."
      }
    },
    "android": {
      "package": "com.cofau.app",
      "versionCode": 2,
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      },
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "INTERNET",
        "RECEIVE_BOOT_COMPLETED"
      ],
      "allowBackup": false
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash.png",
          "resizeMode": "contain",
          "backgroundColor": "#FFFFFF"
        }
      ],
      "expo-secure-store",
      [
        "expo-notifications",
        {
          "icon": "./assets/images/icon.png",
          "color": "#4dd0e1",
          "sounds": []
        }
      ]
    ],
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "extra": {
      "EXPO_PUBLIC_BACKEND_URL": "https://cofau-fix.preview.emergentagent.com",
      "apiUrl": "https://cofau-fix.preview.emergentagent.com",
      "eas": {
        "projectId": "99fd83ad-0052-4fde-85e4-117a0aefb0cc"
      }
    },
    "runtimeVersion": {
      "policy": "sdkVersion"
    },
    "owner": "drivebay"
  }
}
